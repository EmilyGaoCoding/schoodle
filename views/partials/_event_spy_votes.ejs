<table class="table table-condensed table-hover">

    <!-- list all options horizontally -->
    <thead>
      <tr>
        <th>Name</th>
        <% event_options.forEach(function(event_option) { %>
        <th><%= event_option.option %></th>
        <% }); %>
      </tr>
    </thead>

    <!-- list each user's votes horizontally -->
    <tbody>
    <% users.forEach(function(user) { %>
      <tr>
      <td><%= user.username %></td>
      <% user.votes.forEach(function(vote) { %>
        <td>
          <i class="material-icons"><%= vote.isOK ? 'check' : 'clear' %></i>
        </td>
      <% }); %>
      </tr>
    <% }); %>
    </tbody>

